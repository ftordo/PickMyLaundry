<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joaomadeira.android.appddm.FormPay">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metodos de Pagamento"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:paddingTop="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idllVisa"
            android:paddingTop="20dp">
            <ImageView
                android:id="@+id/idIvVisa"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/visa" />

            <TextView
                android:id="@+id/idTvVisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Visa"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idllMaster"
            android:paddingTop="20dp">
            <ImageView
                android:id="@+id/idIvMaster"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/mastercard" />

            <TextView
                android:id="@+id/idTvMaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="MasterCard"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idllpaypal"
            android:paddingTop="20dp">
            <ImageView
                android:id="@+id/idIvPaypal"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/paypal" />

            <TextView
                android:id="@+id/idTvPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="PayPal"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idllBitcoin"
            android:paddingTop="20dp">
            <ImageView
                android:id="@+id/idIvBit"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bitcoin" />

            <TextView
                android:id="@+id/idTvBit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Bitcoin"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>